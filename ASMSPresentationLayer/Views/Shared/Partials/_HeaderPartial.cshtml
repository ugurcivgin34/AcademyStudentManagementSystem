                                <a class="dropdown-item"
                               style="color:white"
                               asp-controller="Account" 
                               asp-action="Logout">
                                    Çıkış Yap
                                </a>
                            </li>

                        </ul>
                    </div>
                </li>
            }
            else
            {
                <li class="login">
                    <button type="button" class="btn login-btn text-uppercase " data-toggle="modal" data-target="#exampleModalCenter">
                        Giriş Yap
                    </button>
                </li>
            }
        </ul>
    </div>
    <div class="clearfix"></div>
</nav>
